<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lishouheng.mengniu.dao.UnlistDao">
    <resultMap id="parameter" type="com.lishouheng.mengniu.bean.SysParam">
        <id column="id" property="id"/>
        <result column="k" property="k"/>
        <result column="v" property="v"/>
    </resultMap>
    <select id="selectParameter" resultMap="parameter">
        SELECT * FROM optparameter;
    </select>
    <delete id="deleteAll" >
        DELETE from optparameter;
    </delete>
    <insert id="insertForeach" parameterType="java.util.List" useGeneratedKeys="false">
        insert into optparameter
        ( k,v)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.k},
            #{item.v})
        </foreach>
    </insert>

</mapper>
